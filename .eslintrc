{
  "root": true,
  "env": {
    "es2021": true,
    "jest": true,
    "browser": true,
    "node": true
  },    
  "parserOptions": {
    "sourceType": "module",
    "babelOptions": {
      "presets": ["@babel/preset-react"]
   }
  },  
  "parser": "@babel/eslint-parser",  
  "plugins": [
    "react-hooks"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "indent": ["error", 4],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "react/prop-types": 0
  }
}
